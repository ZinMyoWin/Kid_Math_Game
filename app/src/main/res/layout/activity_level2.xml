<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Level2"
    android:background="@drawable/level2">


    <TextView
        android:id="@+id/idLevel"
        android:layout_width="97dp"
        android:layout_height="41dp"
        android:background="@drawable/round_textview"
        android:fontFamily="@font/crafty_girls"
        android:gravity="center"
        android:text="Level 2"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039" />

    <TextView
        android:id="@+id/idTotalQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_textview"
        android:text="Total Question"
        android:gravity="center"
        android:fontFamily="@font/crafty_girls"

        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/idTimer"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.143" />

    <TextView
        android:id="@+id/idQuestion"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:background="@drawable/round_textview"
        android:fontFamily="@font/crafty_girls"
        android:gravity="center"
        android:text="Question"

        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idLevel"
        app:layout_constraintVertical_bias="0.288" />

    <TextView
        android:id="@+id/idTimer"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@color/MediumAquamarine"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="20sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.139" />


    <LinearLayout
        android:id="@+id/idLinearLayout"
        android:layout_width="149dp"
        android:layout_height="172dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.624">

        <Button
            android:id="@+id/idansA"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:backgroundTint="@color/white"
            android:fontFamily="@font/crafty_girls"
            android:text="Ans A"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/idansB"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/crafty_girls"
            android:text="Ans B"

            android:textColor="@color/black" />

        <Button
            android:id="@+id/idansC"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/crafty_girls"
            android:text="Ans C"

            android:textColor="@color/black" />


    </LinearLayout>

    <Button
        android:id="@+id/idSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        android:fontFamily="@font/crafty_girls"
        android:text="Submit"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.821" />

    <TextView
        android:id="@+id/idscore"
        android:layout_width="119dp"
        android:layout_height="43dp"
        android:layout_marginTop="140dp"
        android:text="Score:"
        android:fontFamily="@font/crafty_girls"

        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/round_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>